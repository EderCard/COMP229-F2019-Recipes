@model IQueryable<Recipe>

@{
    ViewBag.Title = "Recipe List";
}
<br />
<table class="table table-sm table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Category</th>
            <th>Serves</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.RecipeId</td>
                <td>@r.Name</td>
                <td>
                    @switch (r.Category)
                    {
                        case 1:
                            @: Desserts
                            break;
                        case 2:
                            @: Main Dishes
                            break;
                        case 3:
                            @: Miscellaneous
                            break;
                    }
                </td>
                <td>
                    @switch (r.Serves)
                    {
                        case 1:
                            @: 1
                            break;
                        case 2:
                            @: 2
                            break;
                        case 3:
                            @: 3
                            break;
                        case 4:
                            @: 4
                            break;
                        case 5:
                            @: 5
                            break;
                        case 6:
                            @: 6
                            break;
                        case 7:
                            @: 7
                            break;
                        case 8:
                            @: 8
                            break;
                    }
                </td>
                <td>
                    <form asp-action="Delete" method="post" asp-controller="Admin">
                        <input type="hidden" name="RecipeId" value="@r.RecipeId" />
                        <a class="btn btn-primary" asp-action="ViewRecipe" asp-route-RecipeId=@r.RecipeId asp-controller="Home">View</a>
                        <a class="btn btn-warning" asp-action="EditRecipe" asp-route-RecipeId=@r.RecipeId asp-controller="Admin">Edit</a>
                        <a class="btn btn-primary" asp-action="AddReview" asp-route-RecipeId=@r.RecipeId asp-controller="Review">Add Review</a>
                        <a class="btn btn-primary" asp-action="ReviewList" asp-route-RecipeId=@r.RecipeId asp-controller="Review">List Reviews</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
